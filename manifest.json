{
  "name": "SocialSnooper",
  "description": "Snoop on social media, with confidence.",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "instagram_post_ruleset",
        "enabled": true,
        "path": "request_rulesets/instagram_post_ruleset.json"
      },
      {
        "id": "instagram_comment_ruleset",
        "enabled": true,
        "path": "request_rulesets/instagram_comment_ruleset.json"
      },
      {
        "id": "instagram_follow_ruleset",
        "enabled": true,
        "path": "request_rulesets/instagram_follow_ruleset.json"
      }
    ]
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}